<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>This task is done: <%= @task.completed %></p>
<p><%= link_to "Edit this tasks", edit_task_path %></p>
<p><%= link_to "Back to tasks", tasks_path %></p>
<p>  <%= link_to "Delete This Task",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %></p>
