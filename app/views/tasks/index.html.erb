<h1>My task</h1>
  <% @tasks.each do |task| %>
    <input type="checkbox" id="<%= task.id %>" name="<%= task.title %>" value="Task" <%= "checked" if task.completed %>>
    <label for="<%= task.id %>"> <%= link_to task.title, task_path(task) %> </label>
    <%= link_to "(Delete)", task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %><br>
    <% end %>
    <%= link_to "Create a new task", tasks_new_path %>
